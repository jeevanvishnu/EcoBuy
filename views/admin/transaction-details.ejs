<!-- views/admin/transaction-detail.ejs -->
<%- include('../partials/admin/header.ejs') %>

<div class="p-6 bg-gray-100 min-h-screen">
  <div class="mb-6">
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-bold">Transaction Details</h1>
      <nav class="text-sm text-gray-600">
        <a href="/admin/dashboard" class="hover:underline">Home</a> /
        <a href="/admin/transactions" class="hover:underline">Transactions</a> /
        <span class="text-gray-800">Transaction Detail</span>
      </nav>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Transaction Info Card -->
    <div class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-lg font-semibold mb-4 border-b pb-2">Transaction Information</h2>
      <div class="grid grid-cols-2 gap-4 text-sm">
        <div>
          <label class="text-gray-600 font-medium">Transaction ID:</label>
          <p><%= transaction._id %></p>
        </div>
        <div>
          <label class="text-gray-600 font-medium">Date:</label>
          <p><%= new Date(transaction.date).toLocaleString() %></p>
        </div>
        <div>
          <label class="text-gray-600 font-medium">Transaction Type:</label>
          <p><%= transaction.transactionsMethod %></p>
        </div>
        <div>
          <label class="text-gray-600 font-medium">Amount:</label>
          <p class="<%= transaction.amount > 0 ? 'text-green-600' : 'text-red-600' %> font-semibold">
            â‚¹<%= transaction.amount.toFixed(2) %>
          </p>
        </div>
        <div>
          <label class="text-gray-600 font-medium">Status:</label>
          <p>
            <span class="inline-block px-2 py-1 text-xs font-bold rounded 
              <%= transaction.status === 'completed' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
              <%= transaction.status %>
            </span>
          </p>
        </div>
        <div>
          <label class="text-gray-600 font-medium">Razorpay Order ID:</label>
          <p><%= transaction.razorpayOrderId || 'N/A' %></p>
        </div>
      </div>

      <% if (transaction.orderId) { %>
        <div class="mt-4">
          <label class="text-gray-600 font-medium">Related Order:</label>
          <p>
            <a href="/admin/orders/<%= transaction.orderId._id %>" class="text-blue-600 hover:underline inline-flex items-center gap-1">
              <i class="fas fa-external-link-alt"></i> View Order #<%= transaction.orderId._id %>
            </a>
          </p>
        </div>
      <% } %>
    </div>

    <!-- User Info Card -->
    <div class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-lg font-semibold mb-4 border-b pb-2">User Information</h2>
      <div class="grid grid-cols-2 gap-4 text-sm">
        <div>
          <label class="text-gray-600 font-medium">User ID:</label>
          <p><%= user._id %></p>
        </div>
        <div>
          <label class="text-gray-600 font-medium">Name:</label>
          <p><%= user.name %></p>
        </div>
        <div>
          <label class="text-gray-600 font-medium">Email:</label>
          <p><%= user.email %></p>
        </div>
        <div>
          <label class="text-gray-600 font-medium">Mobile:</label>
          <p><%= user.mobile || 'N/A' %></p>
        </div>
      </div>
      <div class="mt-6">
        <a href="/userProfile" class="inline-flex items-center px-4 py-2 border border-blue-500 text-blue-600 font-medium rounded hover:bg-blue-50 transition">
          <i class="fas fa-user mr-2"></i> View User Profile
        </a>
      </div>
    </div>
  </div>
</div>
