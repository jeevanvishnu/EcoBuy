<%- include('../partials/admin/header.ejs') %>

<div class="min-h-screen bg-gray-100 p-6">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Wallet Transactions</h1>
  </div>

  <section>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <div class="px-6 py-4 border-b">
        <h3 class="text-lg font-semibold text-gray-700">All Transactions</h3>
      </div>
      <div class="p-4 overflow-x-auto">
        <table id="transactionsTable" class="min-w-full divide-y divide-gray-200 text-sm text-left">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-4 py-2 font-medium text-gray-600">Transaction ID</th>
              <th class="px-4 py-2 font-medium text-gray-600">Date</th>
              <th class="px-4 py-2 font-medium text-gray-600">User</th>
              <th class="px-4 py-2 font-medium text-gray-600">Type</th>
              <th class="px-4 py-2 font-medium text-gray-600">Amount</th>
              <th class="px-4 py-2 font-medium text-gray-600">Status</th>
              <th class="px-4 py-2 font-medium text-gray-600">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% if (transactions && transactions.length > 0) { %>
              <% transactions.forEach(transaction => { %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-2"><%= transaction._id %></td>
                  <td class="px-4 py-2"><%= new Date(transaction.date).toLocaleDateString() %></td>
                  <td class="px-4 py-2"><%= transaction.user.name %></td>
                  <td class="px-4 py-2"><%= transaction.transactionsMethod %></td>
                  <td class="px-4 py-2">â‚¹<%= transaction.amount.toFixed(2) %></td>
                  <td class="px-4 py-2">
                    <span class="inline-block px-2 py-1 text-xs font-semibold rounded 
                      <%= transaction.status === 'completed' ? 'bg-green-100 text-green-700' : 'bg-yellow-100 text-yellow-700' %>">
                      <%= transaction.status %>
                    </span>
                  </td>
                  <td class="px-4 py-2">
                    <a href="/admin/transactions/<%= transaction._id %>" class="inline-flex items-center gap-1 text-blue-600 hover:underline text-sm font-medium">
                      <i class="fas fa-eye"></i> View
                    </a>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="7" class="text-center px-4 py-4 text-gray-500">No transactions found</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</div>

<script>
  $(document).ready(function () {
    $('#transactionsTable').DataTable({
      responsive: true,
      lengthChange: true,
      autoWidth: false,
      order: [[1, 'desc']] 
    });
  });
</script>
