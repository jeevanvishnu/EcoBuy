<%- include('../partials/admin/header.ejs') %>

<div class="p-6">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold">Banners</h2>
    </div>
  
    <!-- Banners Table -->
    <div class="bg-white shadow-lg rounded-lg p-6 overflow-x-auto">
      <table class="w-full border border-gray-200 rounded-md">
        <thead>
          <tr class="bg-gray-100 text-gray-700">
            <th class="px-4 py-2 text-left">Image</th>
            <th class="px-4 py-2 text-left">Title</th>
            <th class="px-4 py-2 text-left">Description</th>
            <th class="px-4 py-2 text-left">Active</th>
            <th class="px-4 py-2 text-left">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% if (locals.data) { %>
            <% for(let i = 0; i <data.length;i++){ %>
              <tr class="border-t">
                <td class="px-4 py-2">
                  <img src="/uploads/banner-images/<%= banner.image %>" 
                       alt="Banner" 
                       class="h-8 w-12 object-cover rounded-md" />
                </td>
                <td class="px-4 py-2"><%= banner.title %></td>
                <td class="px-4 py-2"><%= banner.description %></td>
                <td class="px-4 py-2">
                  <% if (data[i].startDate < Date.now() && data[i].endDate > Date.now()) { %>
                    <span class="bg-green-500 text-white text-xs px-2 py-1 rounded-full">Active</span>
                  <% } else { %>
                    <span class="bg-red-500 text-white text-xs px-2 py-1 rounded-full">No Active</span>
                  <% } %>
                </td>
                <td class="px-4 py-2">
                  <a href="/admin/deleteBanner?id=<%= banner._id %>" 
                     class="text-red-600 hover:text-red-800 transition">
                    <i class="material-icons">delete</i>
                  </a>
                </td>
              </tr>
            <% }; %>
          <% } else { %>
            <tr>
              <td colspan="5" class="text-center py-4 text-gray-500">No Banners Available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  
    <!-- Add Banner Button -->
    <div class="flex justify-center mt-6">
      <a href="/admin/addBanner" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition">
        Add Banner
      </a>
    </div>
  </div>
  