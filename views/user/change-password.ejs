<%- include("../partials/users/header.ejs") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Input Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex items-center justify-center h-screen bg-gray-100">
    <div class="flex justify-center items-center w-full h-full">
        <div class="bg-white p-8 rounded-xl shadow-md w-96">
            <h2 class="text-2xl font-semibold text-gray-700 mb-4 text-center">Enter Your Email</h2>
            <form id="emailForm" action="/change-password" method="post">
                <input name="email" type="email" id="email" placeholder="Email Address" class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400">
                <p id="error-message" class="text-red-500 text-sm mt-2 hidden">Please enter a valid email address.</p>
                <button type="submit" class="w-full mt-4 p-3 text-white font-semibold rounded-md bg-gradient-to-r from-blue-500 to-purple-500 hover:from-blue-600 hover:to-purple-600">Submit</button>
            </form>
        </div>
    </div>
    <script>
        document.getElementById('emailForm').addEventListener('submit', function(event) {
    event.preventDefault(); // Prevent default submission
    let emailInput = document.getElementById('email');
    let errorMessage = document.getElementById('error-message');
    let emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    
    if (!emailPattern.test(emailInput.value)) {
        errorMessage.classList.remove('hidden');
    } else {
        errorMessage.classList.add('hidden');
        this.submit(); 
    }
});

    </script>
</body>
</html>