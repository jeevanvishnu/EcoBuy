<%- include("../partials/users/header.ejs") %>
<link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
<title>Manage Addresses</title>

<style>
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-card-entry {
        animation: fadeIn 0.6s ease-out;
    }
    .group:hover .address-delete {
        opacity: 1;
        transform: translateX(0);
    }
</style>
</head>

<body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen font-sans">
    <div class="flex">  
        <%- include("../partials/users/sidebar.ejs") %> <!-- Sidebar -->
        
        <div class="container mx-auto px-4 py-8">
            <div class="max-w-6xl mx-auto">
                <div class="flex justify-between items-center mb-8">
                    <h2 class="text-4xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-indigo-600">
                        Manage Addresses
                    </h2>
                    <a href="/addAddress" class="group">
                        <button class="flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white rounded-full shadow-lg hover:scale-105 transition transform duration-300 ease-in-out hover:shadow-xl">
                            <i class="ri-add-line text-xl"></i>
                            Add New Address
                        </button>
                    </a>
                </div>

                <% if(address && address.length > 0) { %>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% address.forEach((addr, index) => { %>
                            <div class="animate-card-entry group relative bg-white rounded-2xl shadow-lg overflow-hidden transform transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl">
                                <div class="p-6 relative z-10">
                                    <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-all duration-300 address-delete">
                                        <a href="/deleteAddress?id=<%= addr._id %>" onclick="return confirm('Are you sure?');" class="text-red-500 hover:text-red-700">
                                            <i class="ri-delete-bin-2-line text-2xl"></i>
                                        </a>
                                    </div>
                                    <div class="mb-4">
                                        <h3 class="text-xl font-bold text-gray-800 mb-2 flex items-center">
                                            <i class="ri-user-line mr-2 text-purple-600"></i>
                                            <%= addr.name %>
                                        </h3>
                                        <div class="text-gray-600 space-y-1">
                                            <p class="flex items-center">
                                                <i class="ri-map-pin-line mr-2 text-indigo-500"></i>
                                                <%= addr.addressType %>, <%= addr.city %>
                                            </p>
                                            <p class="flex items-center">
                                                <i class="ri-map-pin-2-line mr-2 text-green-500"></i>
                                                <%= addr.state %> - <%= addr.pincode %>
                                            </p>
                                            <p class="flex items-center">
                                                <i class="ri-landscape-line mr-2 text-yellow-500"></i>
                                                Landmark: <%= addr.landMark %>
                                            </p>
                                            <p class="flex items-center">
                                                <i class="ri-phone-line mr-2 text-blue-500"></i>
                                                <%= addr.phone %>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="mt-4">
                                        <a href="/editAddress?id=<%= addr._id %>" class="inline-block">
                                            <button class="px-4 py-2 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-full hover:scale-105 transition transform duration-300">
                                                Edit Address
                                            </button>
                                        </a>
                                    </div>
                                </div>
                                <div class="absolute inset-x-0 bottom-0 h-1 bg-gradient-to-r from-purple-600 to-indigo-600 origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="text-center py-16 bg-white rounded-2xl shadow-lg">
                        <i class="ri-map-pin-add-line text-6xl text-gray-400 mb-4 block"></i>
                        <h3 class="text-2xl font-semibold text-gray-600">No Addresses Found</h3>
                        <p class="text-gray-500 mt-2">Let's add your first address!</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <%- include('../partials/users/footer.ejs') %>

    <script>
        // Optional: Add subtle hover effects or interactions
        document.querySelectorAll('.group').forEach(group => {
            group.addEventListener('mouseenter', (e) => {
                group.classList.add('hover:scale-105');
            });
            group.addEventListener('mouseleave', (e) => {
                group.classList.remove('hover:scale-105');
            });
        });
    </script>
</body>
</html>
