    <section class="py-16">
      <div class="max-w-screen-xl mx-auto px-4">
          <h1 class="text-3xl font-bold text-center mb-8">Our Products</h1>
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
              <% products.forEach(product => { %>
                  <div class="bg-white shadow-lg rounded-lg p-4 relative hover:shadow-2xl transition-transform transform hover:-translate-y-1">
                      <div class="relative">
                        <a href="/productDetails?id=<%= product._id %>">
                              <img src="<%= product.productImage[0] %>" alt="<%= product.productName %>" class="w-full h-56 object-cover rounded-md">
                          </a>
                          <button class="absolute top-2 right-2 bg-white bg-opacity-75 p-2 rounded-full text-red-500 hover:bg-opacity-100 hover:text-red-600 transition">
                              <i class="fas fa-heart"></i>
                          </button>
                      </div>
                      <h2 class="text-lg font-semibold mt-4 text-gray-900"><%= product.productName %></h2>
                      <p class="text-gray-600 font-medium mt-1">â‚¹<%= product.salePrice %></p>
                      <button class="mt-4 w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition duration-300">
                          Add to Cart
                      </button>
                  </div>
              <% }); %>
          </div>
      </div>
  </section>
    
</body>
